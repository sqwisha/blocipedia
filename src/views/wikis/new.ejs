<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>

    <% include ../static/partials/navbar.ejs %>

    <main class="container">

    <% include ../static/partials/messages.ejs %>

    <h1>New Wiki</h1>

    <% if (currentUser) { %>
      <form action="/wikis/create" method="post">
        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" name="title" class="form-control" placeholder="Enter title">
        </div>
        <div class="form-group">
          <label for="body">Wiki body</label>
          <textarea name="body" class="form-control" rows="4" placeholder="Enter wiki body"></textarea>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="true" name="private">
          <label class="form-check-label" for="private">
            Private
          </label>
        </div>
        <button type="submit" class="btn btn-primary">Publish</button>
      </form>
    <% } %>

    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
